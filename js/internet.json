{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "data/internet_users.csv"
    },
    "vconcat": [
      {
        "width": "container",
        "height": 360,
        "mark": {"type": "area","color":"#66a3ff","opacity": 0.9},
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal",
            "scale": {"domain": {"param": "brush"}},
            "axis": {"title": "", "grid": false}
          },
          "y": {
            "field": "Internet users (% of population)",
            "type": "quantitative"
          },
          "tooltip": [
            {"field": "Year", "title":"Year","type": "temporal"},
            {"field": "Internet users (% of population)", "type": "quantitative", "title":"Internet users (%)"}
          ]
        }
      },
      {
        "width": "container",
        "height": 50,
        "mark": {"type": "area","color":"#66a3ff","opacity": 0.3},
        "params": [
          {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
        ],
        "encoding": {
          "x": {
            "type": "temporal",
            "field": "Year",
            "title": "Year",
            "axis": {"grid": false}
            },
          "y": {
            "field": "Internet users (% of population)",
            "type": "quantitative",
            "title":null
          }
        }
      } 
    ]
  }